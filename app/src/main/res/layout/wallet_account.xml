<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đầu tiên, hãy tạo ví"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="32dp" />

    <!-- Nhập tên ví -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên ví"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/et_wallet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Tên ví"
        android:background="@android:color/transparent"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="text"
        android:layout_marginBottom="16dp"
        android:paddingBottom="4dp"
        android:layout_marginTop="4dp"
        android:gravity="start"
        android:singleLine="true"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:drawableBottom="@android:drawable/divider_horizontal_textfield" />

    <!-- Đơn vị tiền tệ + nút Sửa -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đơn vị tiền tệ"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_currency"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Việt Nam Đồng"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <!-- Số dư -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số dư"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/et_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Nhập số tiền hiện có"
        android:background="@android:color/transparent"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="numberDecimal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="32dp"
        android:drawableBottom="@android:drawable/divider_horizontal_textfield" />

    <!-- Nút Lưu -->
    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lưu"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/darker_gray"
        android:enabled="false"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center" />

</LinearLayout>